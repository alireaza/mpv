Build:
docker build --build-arg UID=$(id -u) --build-arg GID=$(id -g) -t alireaza/mpv .

Run:
docker run \
--interactive \
--tty \
--rm \
--mount="type=bind,source=/tmp/.X11-unix,target=/tmp/.X11-unix" \
--env="DISPLAY=$DISPLAY" \
--device="/dev/dri:/dev/dri" \
--env="PULSE_SERVER=unix:${XDG_RUNTIME_DIR}/pulse/native" \
--mount="type=bind,source=${XDG_RUNTIME_DIR}/pulse/native,target=${XDG_RUNTIME_DIR}/pulse/native" \
--mount="type=bind,source=$(pwd)/udocker,target=/home/udocker" \
--name="mpv" \
alireaza/mpv \
"<File/Link>"
